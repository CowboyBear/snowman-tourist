#Build image + Upload to registry

docker build -t tourist-api .
docker tag tourist-api gcr.io/snowman-tourist/tourist-api
docker push gcr.io/snowman-tourist/tourist-api

#Create Secret
kubectl apply -f ./k8s/tourist-api-db-secret.yaml

#Create deployment
kubectl apply -f ./k8s/deployment-config.yaml

#Create service
kubectl expose deployment tourist-api-deployment --type=LoadBalancer --port 80 --target-port 80 --name=tourist-api